<div class="container-fluid cover">
  <h1>Clientes:</h1>
  <table class="table table-striped table-light">
    <thead>
      <tr>
        <th scope="col">Numero</th>
        <th scope="col">Valor</th>
      </tr>
    </thead>
    <tbody>
      <% pedidos.forEach((pedido)=>{ %>
      <tr>
        <td><%= pedido.numeroPedido %></td>
        <td>R$<%= pedido.valor%></td>
      </tr>
      <%}) %>
    </tbody>
  </table>
</div>

